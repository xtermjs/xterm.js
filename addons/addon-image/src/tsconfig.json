{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "../out",
    "rootDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "types": [
      "../../../node_modules/@types/mocha"
    ],
    "baseUrl": ".",
    "paths": {
      "browser/*": [ "../../../src/browser/*" ],
      "common/*": [ "../../../src/common/*" ],
      "@xterm/addon-image": [ "../typings/addon-image.d.ts" ]
    }
  },
  "include": [
    "./**/*",
    "../../../typings/xterm.d.ts"
  ],
  "references": [
    { "path": "../../../src/browser" },
    { "path": "../../../src/common" }
  ]
}
